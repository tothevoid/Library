<Window x:Class="Library.AccountRecover"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Восстановление уч. записи" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0,30,0,0">
            <TextBlock Text="Для восстановления учётной записи"/>
            <TextBlock HorizontalAlignment="Center" Text="введите паспортные данные."/>
            <TextBlock HorizontalAlignment="Center" Margin=" 0,20,0,0" Text="Серия: "/>
            <TextBox Text="{Binding Series}"/>
            <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center" Text="Номер: "/>
            <TextBox Text="{Binding Number}"/>
            <Button Margin="0,20,0,0" Content="Восстановить" Command="{Binding Recover}"/>
        </StackPanel>
        
    </Grid>
</Window>
