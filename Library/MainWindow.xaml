<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:Library.Converters"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="АСУБ" Height="720" Width="1280" ResizeMode="NoResize" Icon="Icons\Book.png" WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <conv:WidthToSign  x:Key="WidthConverter"/>
        <conv:IdToMargin x:Key="MarginConverter"/>
        <conv:PathToImage x:Key="PathConverter"/>
        <conv:SelectionToVisibility x:Key="QueryConverter"/>
        <conv:BooleanInverse x:Key="InverseBoolean"/>
        <ItemsPanelTemplate x:Key="cnv">
            <Canvas/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="{Binding Width}" MaxWidth="300" Name="col"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="3" IsEnabled="False"/>
        <Button Grid.Column="1" Grid.Row="1" Height="70" Content="{Binding Path=Width, ElementName=col,Converter={StaticResource WidthConverter}}" FontSize="30" Background="White" Command="{Binding Expand}"/>
        <Menu Background="White" Grid.ColumnSpan="3" Height="30" >
            <MenuItem Header="Главная" Height="30">
                <MenuItem Header="Подключение" Command="{Binding LoadData}"/>
                <MenuItem Header="Настройки"/>
            </MenuItem>
            <MenuItem Header="Администрирование" Height="30">
                <MenuItem Header="Добавить книгу"/>
                <MenuItem Header="Регистрация"/>
                <MenuItem Header="Журнал"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.ColumnSpan="3"  HorizontalAlignment="Right" Orientation="Horizontal" >
            <Image   Source="{Binding Status}" />
            <TextBlock VerticalAlignment="Center" Text="{Binding UserName}" Padding="0,0,5,0" FontSize="15"/>
            <Button  Background="White"  BorderThickness="0" Command="{Binding Log}">
                <Image Source="Icons/Logout.png"/>
            </Button>
        </StackPanel>
        <Grid Grid.Row="1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <ScrollViewer CanContentScroll ="True" HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Grid.Row="2" Margin="0,25,0,0">
                <Grid>
                    <!--TODO: implement auto height by property-->
                    <Viewbox  Height="8000">
                        <Canvas/>
                    </Viewbox>
                    <ItemsControl ItemsSource="{Binding Books}" ItemsPanel="{StaticResource cnv}" Grid.ColumnSpan="2" Grid.Row="2" >
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button  Margin="{Binding BookID ,Converter={StaticResource MarginConverter}}" Height="400" Width="200" Background="White" BorderThickness="0" Command="{Binding SelectBook}">
                                    <StackPanel>
                                        <Image Source="{Binding ImgLink, Converter={StaticResource PathConverter}}" Height="320" />
                                        <TextBlock Text="{Binding Author}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Score}"  HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Marks}" TextDecorations="Underline" HorizontalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
            <Expander Margin="0,0,0,390"  IsTabStop="False" Grid.Column="0" Grid.RowSpan="2" Width="200"  Header="Поиск" HorizontalAlignment="Left">
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="Black">
                    <Grid Background="White">
                        <StackPanel >
                            <ComboBox ItemsSource="{Binding SearchTypes}" Margin="10,20,10,0" Name="Selected"/>
                            <TextBox Text="{Binding SearchQuery}" Name="box" Height="25" Margin="10,20,10,0" Visibility="{Binding Path=SelectedIndex, ElementName=Selected,Converter={StaticResource QueryConverter}}"/>
                            <StackPanel Margin="10,20,10,0" Orientation="Horizontal"  Visibility="{Binding Path=Visibility, ElementName=box,Converter={StaticResource InverseBoolean}}">
                                <ComboBox ItemsSource="{Binding Signs}" SelectedIndex="{Binding SelectedSign}" Width="40" />
                                <TextBox Text="{Binding SearchQueryNum}" />
                            </StackPanel>
                            <Button Content="Очистить" BorderBrush="Black" Background="White" Width="70" Command="{Binding ClearQuery}" Margin="0,20,0,0" />
                            <Button Margin="0,20,0,0"  Command="{Binding SearchPressed}" CommandParameter="{Binding Path=SelectedIndex, ElementName=Selected}" HorizontalAlignment="Center" Width="60" Content="Искать"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Expander>
        </Grid>

       
        <Grid Grid.Column="2" Grid.Row="1" Margin="25">
            
        </Grid>
        
    </Grid>
</Window>
