<Window x:Class="Library.Journal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        xmlns:conv="clr-namespace:Library.Converters"
        mc:Ignorable="d"
        Title="Journal" Height="400" Width="700" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:IdToBookName  x:Key="BookConverter"/>
        <conv:IdToLastName x:Key="ReaderConverter"/>
        <conv:DateTimeToDate  x:Key="DateConverter"/>
        <conv:BoolToString  x:Key="BoolConverter"/>
    </Window.Resources>
    <Grid>
        
        <DataGrid ItemsSource="{Binding Records}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Читатель" Binding="{Binding UserID,Converter={StaticResource ReaderConverter}}" Width="2*"/>
                <DataGridTextColumn Header="Книга" Binding="{Binding BookID,Converter={StaticResource BookConverter}}" Width="2*"/>
                <DataGridTextColumn Header="Дата выдачи" Binding="{Binding Date, Converter={StaticResource DateConverter}}" Width="2*"/>
                <DataGridTextColumn Header="Дата возврата" Binding="{Binding ReturnDate, Converter={StaticResource DateConverter}}" Width="2*"/>
                <DataGridTextColumn Header="Взята?" Binding="{Binding IsAccepted, Converter={StaticResource BoolConverter}}" Width="1*"/>
                <DataGridTextColumn Header="Возвращена?" Binding="{Binding IsReturned, Converter={StaticResource BoolConverter}}" Width="1.4*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
