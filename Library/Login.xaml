<Window x:Class="Library.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Вход" ResizeMode="NoResize" Height="300" Width="300"  WindowStartupLocation="CenterScreen" >
    <Grid >
        <StackPanel>
            <Label Margin="0,30,0,0"  Content="Логин" HorizontalAlignment="Center"/>
            <TextBox Name="log" Height="25" Width="150" Text="{Binding Login}" FontSize="15"  />
            <Label Content="Пароль" HorizontalAlignment="Center"/>
            <PasswordBox Name="Password" Height="25" Width="150" FontSize="15" />
            <TextBlock  HorizontalAlignment="Center" Margin="0,20,0,0">
                     <Hyperlink Command="{Binding Register}" FontSize="14" FontStyle="Normal">Не зарегистрированы?</Hyperlink>
            </TextBlock>
            <Button Height="25" Margin ="0,20,0,0" Width="70" Content="OK" Command="{Binding OkPress}" CommandParameter="{Binding ElementName = Password}" IsDefault="True"/>
          
        </StackPanel>
    </Grid>
</Window>
